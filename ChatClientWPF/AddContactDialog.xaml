<Window x:Class="ChatClientWPF.AddContactDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить контакт" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Добавить пользователя в контакты:" 
                   FontWeight="Bold" 
                   FontSize="16"
                   Margin="0,0,0,15"/>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                       Text="Логин пользователя:" 
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="tbLogin" 
                     Grid.Column="1" 
                     Height="35" 
                     Padding="8"
                     FontSize="14"
                     VerticalContentAlignment="Center"/>

            <Button Grid.Column="2" 
                    Content="🔍 Найти" 
                    Click="BtnSearch_Click" 
                    Padding="15,5" 
                    Margin="10,0,0,0"
                    Background="#4ecdc4"
                    FontWeight="Bold"/>
        </Grid>

        <!-- Результаты поиска -->
        <Border Grid.Row="2" 
                BorderBrush="#4ecdc4" 
                BorderThickness="1"
                Padding="10"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Найденные пользователи:" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <ListView x:Name="lvUsers" 
                          Height="150"
                          Background="#f5f5f5"
                          BorderThickness="0"
                          SelectionChanged="LvUsers_SelectionChanged"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" 
                                           DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Имя" Width="150"
                                           DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Логин" Width="100"
                                           DisplayMemberBinding="{Binding Login}"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock x:Name="tbSearchResult" 
                           Text="Введите логин пользователя для поиска"
                           FontStyle="Italic"
                           Foreground="Gray"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Click="BtnCancel_Click" 
                    Margin="0,0,10,0" 
                    Padding="20,8" 
                    Width="120"
                    FontSize="14"/>
            <Button x:Name="btnAdd" 
                    Content="Добавить выбранного" 
                    Click="BtnAdd_Click" 
                    Padding="20,8" 
                    Width="208" 
                    Background="#4ecdc4"
                    FontSize="14"
                    FontWeight="Bold"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>