<Window x:Class="ChatClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Messenger" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Стиль для сообщений -->
        <Style x:Key="MessageItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="5">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель навигации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2b2b2b">
            <Button Name="btnRegister" Content="Регистрация" Margin="5" Padding="10,5" Click="BtnRegister_Click"/>
            <Button Name="btnLogin" Content="Вход" Margin="5" Padding="10,5" Click="BtnLogin_Click"/>
            <Button Name="btnChats" Content="Мои чаты" Margin="5" Padding="10,5" Click="BtnChats_Click"/>
            <Button Name="btnContacts" Content="Контакты" Margin="5" Padding="10,5" Click="BtnContacts_Click"/>
            <Button Name="btnCreateChat" Content="Создать чат" Margin="5" Padding="10,5" Click="BtnCreateChat_Click"/>
            <TextBlock Name="tbUserInfo" Margin="10,0" VerticalAlignment="Center" Foreground="White"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" Name="MainTabControl">
            <TabItem Header="Чат">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Сообщения -->
                    <ListBox Name="lbMessages" Grid.Row="0" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Background="#1e1e1e" 
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource MessageItemStyle}"
                             ItemsSource="{Binding}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#3c3c3c" BorderThickness="0,0,0,1" 
                                        Padding="10,5" Margin="0,0,0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding UserName}" 
                                                   FontWeight="Bold" 
                                                   Foreground="#4ecdc4"
                                                   FontSize="14"/>
                                        <TextBlock Text="{Binding Content}" 
                                                   TextWrapping="Wrap" 
                                                   Margin="0,5,0,0"
                                                   Foreground="White"
                                                   FontSize="12"/>
                                        <TextBlock Text="{Binding Timestamp}" 
                                                   FontSize="10" 
                                                   Foreground="Gray"
                                                   Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Ввод сообщения -->
                    <Grid Grid.Row="1" Background="#2b2b2b">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="tbMessage" Grid.Column="0" 
                                 MinHeight="40" AcceptsReturn="True" 
                                 VerticalScrollBarVisibility="Auto"
                                 Background="#3c3c3c" 
                                 Foreground="White"
                                 BorderBrush="#4ecdc4"
                                 FontSize="14"/>
                        <Button Grid.Column="1" Content="📤" 
                                FontSize="16" Margin="10,0,0,0" 
                                Padding="15,5" Background="#4ecdc4"
                                Click="BtnSend_Click"/>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Чаты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Обновить" Click="BtnRefreshChats_Click" 
                            Margin="10" Padding="10,5" HorizontalAlignment="Left"/>

                    <DataGrid Name="dgChats" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" 
                              Background="#1e1e1e"
                              Foreground="Black" 
                              BorderBrush="#3c3c3c"
                              SelectionChanged="DgChats_SelectionChanged"
                              MouseDoubleClick="DgChats_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                               Binding="{Binding Id}" 
                                               Width="50"
                                               Foreground="Black"/>
                            <DataGridTextColumn Header="Название" 
                                               Binding="{Binding Name}" 
                                               Width="*"
                                               Foreground="Black"/>
                            <DataGridTextColumn Header="Создатель" 
                                               Binding="{Binding CreatedBy}" 
                                               Width="80"
                                               Foreground="Black"/>
                            <DataGridTextColumn Header="Создан" 
                                               Binding="{Binding CreatedAt}" 
                                               Width="120"
                                               Foreground="Black"/>

                            <!-- Кнопка Открыть чат -->
                            <DataGridTemplateColumn Header="Действие" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Открыть" 
                            Click="BtnOpenChat_Click"
                            Tag="{Binding Id}"
                            Padding="5,2"
                            Background="#4ecdc4"
                            Foreground="White"
                            FontWeight="Bold"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Контакты">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10">
                        <Button Content="Добавить контакт" Click="BtnAddContact_Click"
                                Padding="10,5" Background="#4ecdc4"/>
                    </StackPanel>

                    <DataGrid Name="dgContacts" Grid.Row="1" AutoGenerateColumns="False"
                              CanUserAddRows="False" 
                              Background="#1e1e1e"
                              Foreground="Black" 
                              BorderBrush="#3c3c3c">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" 
                                               Binding="{Binding UserId}" 
                                               Width="50"
                                               Foreground="Black"/>
                            <DataGridTextColumn Header="Имя" 
                                               Binding="{Binding Name}" 
                                               Width="*"
                                               Foreground="Black"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>